#Exercicio 12
package main

import (
	"fmt"
)

func main() {
	p1 := ""
	p2 := ""
	fmt.Print("Digite uma palavra para ver se é um palindromo: ")
	fmt.Scan(&p1)
	for _, v := range p1 {
		p2 = string(v) + p2
	}
	if p1 == p2 {
		fmt.Print("Essa frase é um palindromo")
	} else {
		fmt.Print("Essa frase não é um palindromo ")
	}
}

